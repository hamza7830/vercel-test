{
  "version": 2,
  "public": false,
  "github": { "enabled": false },
  "regions": ["lhr1"],

  "builds": [
    {
      "src": "api/brand-sentiment/handler.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.11",
        "includeFiles": [
          "api/brand-sentiment/pipeline.py",
          "api/brand-sentiment/requirements.txt"
        ]
      }
    }
  ],

  "routes": [
    { "src": "^/api/brand-sentiment/?$", "dest": "/api/brand-sentiment/handler.py" }
  ]
}
